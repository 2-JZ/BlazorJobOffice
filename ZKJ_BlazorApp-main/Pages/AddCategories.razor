@page "/Categories/addCategory"
@using System.Text.Json
@using System.Net.Http
@using System.Text
@attribute [Authorize]
@inject ICategoriesService CategoriesService
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager

<h1>Add Category</h1>

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@category" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <InputText id="Name" class="form-control" @bind-Value="category.Name" />

                <label for="Description" class="control-label">Description</label>
                <InputTextArea id="Description" class="form-control" @bind-Value="category.Description" />

                <label for="ParentCategoryId" class="control-label">Parent Category ID</label>
                <InputNumber id="ParentCategoryId" class="form-control" @bind-Value="category.ParentCategoryId" />

                <label for="Image" class="control-label">Image</label>
                <InputFile OnChange="LoadImage" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-danger" @onclick="Cancel">Cancel</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private Category category = new Category();
    private IBrowserFile imageFile;

    private void LoadImage(InputFileChangeEventArgs e)
    {
        imageFile = e.File;
    }

    private async Task HandleValidSubmit()
    {
        var formData = new MultipartFormDataContent();

        if (imageFile != null)
        {
            var fileContent = new StreamContent(imageFile.OpenReadStream());
            fileContent.Headers.ContentType = new System.Net.Http.Headers.MediaTypeHeaderValue(imageFile.ContentType);
            formData.Add(fileContent, "Image", imageFile.Name);
        }

        var categoryJson = JsonSerializer.Serialize(category);
        var categoryContent = new StringContent(categoryJson, Encoding.UTF8, "application/json");
        formData.Add(categoryContent, "category");

        var httpClient = new HttpClient();
        var response = await httpClient.PostAsync("your_api_endpoint/Category/addCategory", formData);

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/Categories");
        }
        else
        {
            // Handle the error (e.g., show a message to the user)
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/Categories");
    }
}
